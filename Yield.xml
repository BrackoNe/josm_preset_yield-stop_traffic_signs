<group name="Yield / Stop Traffic Sign" icon="icons/icon.png">
	<item name="Yield (Forward)" icon="icons/regulatory/RS_II-1.png" type="node">
		<label text="Yield in forward direction" icon="icons/regulatory/RS_II-1.png"/>
		<space/>
		<label text="Note: Do not forget to turn on direction tag at 2-way road!"/>
		<space/>
		<key key="traffic_sign:forward" value="RS:II-1"/>
		<key key="highway" value="give_way"/>
		<check text="Is direction tag necessary?" key="direction" value_on="forward" disable_off="true"/>
		<item_separator />
		<combo key="traffic_sign:2:forward" text="Direction" default="RS:II-43.1">
			<list_entry value="RS:II-43" icon="icons/regulatory/RS_II-43.png" />
			<list_entry value="RS:II-43.1" icon="icons/regulatory/RS_II-43.1.png" />
			<list_entry value="RS:II-43.2" icon="icons/regulatory/RS_II-43.2.png"/>
