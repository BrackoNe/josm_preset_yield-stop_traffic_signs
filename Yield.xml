			<list_entry value="RS:II-44.2" icon="icons/regulatory/RS_II-44.2.png"/>
			</combo>
		<space />
		<combo key="side" text="Side of the way" values="right,left,both,up,down" default="right"  />
		<item_separator />
		<text key="source:traffic_sign:mapillary" text="Mapillary Image Key" />
		<space />
		<label text="Optionally" />
		<text key="distance_ahead" text="Distance where regulatory will be applied." />
		</item>
	
